<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toolbar"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="@color/colorToolbarBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/line_toolbar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorToolbarBottomLine"/>

        <TextView
            android:id="@+id/text_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/line_toolbar"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="6dp"
            android:textAlignment="center"
            android:textColor="@color/colorToolbarSubscribesTextView"
            fontPath="minecraft.ttf"
            android:text="@string/toolbar_subscribes_textview"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/text_toolbar"
            android:orientation="horizontal">

            <!--<SearchView-->
                <!--android:id="@+id/search_toolbar"-->
                <!--android:layout_width="267dp"-->
                <!--android:layout_height="48dp"-->
                <!--android:background="@drawable/searchview_drawable"-->
                <!--android:iconifiedByDefault="false"/>-->
            
            <RelativeLayout
                android:id="@+id/search_toolbar"
                android:layout_width="267dp"
                android:layout_height="48dp"
                android:background="@drawable/searchview_drawable">

                <ImageView
                    android:id="@+id/toolbar_search_icon"
                    android:layout_width="30.7dp"
                    android:layout_height="30.7dp"
                    android:tint="@color/colorToolbarIcon"
                    android:layout_marginLeft="67.3dp"
                    android:layout_marginStart="67.3dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_zoom"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/toolbar_search_icon"
                    android:layout_toEndOf="@id/toolbar_search_icon"
                    android:layout_marginLeft="13.3dp"
                    android:layout_marginStart="13.3dp"
                    android:layout_centerVertical="true"
                    fontPath="minecraft.ttf"
                    android:textSize="21.3sp"
                    android:textColor="@color/colorToolbarIcon"
                    android:text="@string/toolbar_search_hint" />

                <EditText
                    android:id="@+id/edittext_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="20dp"
                    android:paddingEnd="20dp"
                    fontPath="minecraft.ttf"
                    android:textSize="21.3dp"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/colorToolbarIcon"
                    android:background="@null"
                    android:inputType="text" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/qr_button_toolbar"
                android:layout_width="43.3dp"
                android:layout_height="43.3dp"
                app:srcCompat="@drawable/ic_qr_code"
                android:tint="@color/colorToolbarIcon"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="11.3dp"
                android:layout_marginLeft="11.3dp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>
