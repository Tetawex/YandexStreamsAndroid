<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.azurewebsites.streambeta.yandexstreamsandroid.domain.view.activity.MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"

            app:itemIconTint="@drawable/selector_icon"
            app:itemTextColor="@drawable/selector_icon"
            app:itemBackground="@drawable/selector_item_background"
            fontPath="minecraft-rus.ttf"
            app:menu="@menu/navigation" />

    </LinearLayout>
    <include layout="@layout/view_progressbar"
        android:visibility="gone"/>
</FrameLayout>